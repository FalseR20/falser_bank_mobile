<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_pade_height"
        android:padding="5dp"
        android:orientation="horizontal"
        tools:context=".ui.cards.pager.CardPageFragment"
        android:background="@drawable/outline_border_gray_transparent">

    <ImageView
            android:layout_width="@dimen/image_new_card_width"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_add_card_24"
            app:tint="?attr/colorOnBackground"

            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:importantForAccessibility="no" />

    <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="@string/create_new_card_text"
            android:gravity="center"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>